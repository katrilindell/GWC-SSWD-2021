<div class="data-form">
  <form class="form-signin" method="POST" action="<%=`/members/${member._id}/update?_method=PUT`%>">
    <h2>Muokkaa jäsentä:</h2>
    <label for="inputFirstName">Etunimi</label>
    <input class="form-control" type="text" name="first" id="inputFirstName" value="<%= member.name.first %>" placeholder="First" autofocus>
    <label for="inputLastName">Sukunimi</label>
    <input class="form-control" type="text" name="last" id="inputLastName" value="<%= member.name.last %>" placeholder="Last">
    <label for="inputEmail">Sähköposti</label>
    <input class="form-control" type="email" name="email" id="inputEmail" value="<%= member.email %>" placeholder="Email address" required>
    <label for="inputZipCode">Postinumero</label>
    <input class="form-control" type="text" name="zipCode" id="inputZipCode" pattern="\d*" value="<%= member.zipCode %>" placeholder="Zip Code" required>
    <br />
    <button class="btn btn-lg btn-primary btn-block" type="submit">Päivitä</button>
  </form>
</div>
